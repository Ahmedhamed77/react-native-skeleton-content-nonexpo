{
  "transform": {
    "\\.(ts|tsx)$": "ts-jest"
  },
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.jest.json"
    }
  },
  "setupFiles": [
    "./src/setupTests.js"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>setup-test-env.js"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "modulePaths": [
    "<rootDir>"
  ],
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/src/setupTests.js",
    "package.json",
    "package-lock.json"
  ]
}